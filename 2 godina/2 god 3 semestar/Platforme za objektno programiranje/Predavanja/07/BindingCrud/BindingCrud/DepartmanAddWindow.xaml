<Window x:Class="Crud.DepartmanAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DepartmanAddWindow" Height="267" Width="300">
    <Grid>
        <Label Content="Naziv" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lbNaziv" VerticalAlignment="Top" />
        <TextBox Text ="{Binding Path=Naziv}" Height="23" HorizontalAlignment="Left" Margin="66,12,0,0" Name="tbNaziv" VerticalAlignment="Top" Width="200" />
        <Button Content="Potvrdi" Height="23" HorizontalAlignment="Left" Margin="191,193,0,0" Name="btnDodaj" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnDodaj_Click" />
        <Label Content="Opis" Height="28" HorizontalAlignment="Left" Margin="13,59,0,0" Name="lbOpis" VerticalAlignment="Top" />
        <TextBox Text="{Binding Path=Opis}" Height="118" HorizontalAlignment="Left" Margin="66,59,0,0" Name="textBox1" VerticalAlignment="Top" Width="200" TextWrapping="Wrap" />
        <Button Content="Odustani" Height="23" HorizontalAlignment="Left" Margin="110,193,0,0" Name="btnOdustani" VerticalAlignment="Top" Width="75" IsCancel="True" />
    </Grid>
</Window>
