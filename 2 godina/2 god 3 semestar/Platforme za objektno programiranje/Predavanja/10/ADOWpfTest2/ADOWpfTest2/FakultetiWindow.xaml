<Window x:Class="ADOWPfTest2.FakultetiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FakultetiWindow" Height="386" Width="511">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        
    </Window.Resources>
    
    <Grid>
        <DataGrid AutoGenerateColumns="True" Margin="12,12,12,57" Name="dgFakulteti" CanUserAddRows="True" CanUserDeleteRows="True" AutoGeneratedColumns="dgFakulteti_AutoGeneratedColumns" />
        <Button Content="Sačuvaj" HorizontalAlignment="Right" Margin="0,0,12,11" Name="btnSave" Width="92" IsDefault="True" Click="btnSave_Click" Height="39" VerticalAlignment="Bottom" />
        <Button Content="Poništi" Margin="0,0,110,11" Name="btnCancel" IsCancel="True" Height="39" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="87" />
        <Button Content="Test brisanje" Height="39" HorizontalAlignment="Left" Margin="12,0,0,12" Name="btnDelete" VerticalAlignment="Bottom" Width="134" Click="btnDelete_Click" />
    </Grid>
</Window>
