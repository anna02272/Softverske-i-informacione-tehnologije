<Window x:Class="ADOWPfTest.FakultetiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FakultetiWindow" Height="398" Width="508">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <DataGrid AutoGenerateColumns="True" Margin="12,12,12,58" Name="dgFakulteti" CanUserAddRows="True" CanUserDeleteRows="True" AutoGeneratedColumns="dgFakulteti_AutoGeneratedColumns" />
        <Button Content="Sačuvaj" Height="39" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnSave" VerticalAlignment="Bottom" Width="96" IsDefault="True" Click="btnSave_Click" />
        <Button Content="Poništi" Margin="0,0,114,13" Name="btnCancel" IsCancel="True" Height="39" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="99" />
        <Button Content="Test brisanje" HorizontalAlignment="Left" Margin="12,0,0,13" Name="btnDelete" Width="129" Click="btnDelete_Click" Height="39" VerticalAlignment="Bottom" />
    </Grid>
</Window>
