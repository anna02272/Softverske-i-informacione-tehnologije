<Window x:Class="LanguageSchools.Views.AllProfessorsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchools.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllProfessorsPage">

    <Grid RenderTransformOrigin="0.505,0.109" Margin="0,0,0,-0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"></RowDefinition>
            <RowDefinition Height="211*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" Grid.RowSpan="1" >
            <MenuItem Name="miAddProfessor" Header="Add professor" Click="miAddProfessor_Click"/>
            <MenuItem Name="miUpdateProfessor" Header="Update professor"/>
        </Menu>
        <DataGrid IsReadOnly="True" CanUserAddRows="False" Name="dgProfessors" Margin="0,18,0,-0.4" VerticalAlignment="Stretch" Grid.RowSpan="2"/>
    </Grid>
</Window>
